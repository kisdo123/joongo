$(function() {

	var radioImg = $(".productInfo-radioUl");

	$("input[id='pos1']").click(function() {
		radioImg.css("margin-left", "0px");
	});

	$("input[id='pos2']").click(function() {

		radioImg.css("margin-left", "-400px");

	});

	$("input[id='pos3']").click(function() {

		radioImg.css("margin-left", "-800px");

	});

	$("input[id='pos4']").click(function() {

		radioImg.css("margin-left", "-1200px");

	});

	$("input[id='pos5']").click(function() {

		radioImg.css("margin-left", "-1600px");

	});
	
	
	
	



});
